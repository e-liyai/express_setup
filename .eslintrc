{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "arrowFunctions": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "no-const-assign": "error",
    "no-unreachable": "error",
    "no-unused-vars": "error",
    "no-console": "error",
    "prefer-destructuring": "error",
    "no-underscore-dangle": 0
  }
}